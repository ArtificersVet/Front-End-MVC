@model MVC_NPANTS.Models.TipoPrendaVestir

@{
    ViewData["Title"] = "Detalles de Tipo de Prenda";
}

<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
    }

    .tipo-prenda-container {
        max-width: 400px;
        margin: 200px auto;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .tipo-prenda-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .tipo-prenda-header h1 {
            margin: 0;
            font-size: 24px;
            color: #333;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #666;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f8d7b4;
    }

    .btn-container {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        margin: 0 10px;
    }

    .btn-editar {
        background-color: #b39b7d;
        color: white;
    }

    .btn-regresar {
        background-color: #c9a063;
        color: white;
    }
</style>

<div class="tipo-prenda-container">
    <div class="tipo-prenda-header">
        <h1>Detalles de Tipo de Prenda</h1>
    </div>

    <div class="form-group">
        <label>ID:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Id)
        </div>
    </div>

    <div class="form-group">
        <label>Nombre:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Nombre)
        </div>
    </div>

    <div class="btn-container">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-editar" })
        <a asp-action="Index" class="btn btn-regresar">Volver</a>
    </div>
</div>
