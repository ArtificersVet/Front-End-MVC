@model MVC_NPANTS.Models.Tela

@{
    ViewData["Title"] = "Eliminar Tela";
}

<div class="main-container">
    <div class="page-header">
        <h1 class="text-center">¿Estás seguro de que deseas eliminar esta tela?</h1>
    </div>

    <form asp-action="Delete" class="shadow p-4 rounded bg-light">
        <div class="row">
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">ID:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Id)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Nombre:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Nombre)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Color:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Color)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Stock:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Stock)</div>
            </div>
        </div>

        <input type="hidden" asp-for="Id" />

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-primary">Cancelar</a>
        </div>
    </form>
</div>
