@model IEnumerable<MVC_NPANTS.Models.Tela>

@{
    ViewData["Title"] = "Telas";
}

<div class="main-container">
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <form asp-action="Index" method="get" class="mb-3">
        <div class="form-group d-flex">
            <button type="submit" class="btn btn-primary">Buscar</button>
            <input type="text" class="form-control me-2" id="searchString" name="searchString" placeholder="Ingrese nombre o color">
          
        </div>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.SearchString))
    {
        <p>Resultados de búsqueda para: "@ViewBag.SearchString"</p>
    }

    <div class="btn-container mb-3">
        <a class="btn btn-create" asp-action="Create">CREAR NUEVA TELA</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="data-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-edit" }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-details" }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No se encontraron telas.
        </div>
    }
</div>
