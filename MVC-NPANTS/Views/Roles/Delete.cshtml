@model roles

@{
    ViewData["Title"] = "Eliminar Rol";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-danger text-center" role="alert">
                <h4 class="alert-heading">¡Atención!</h4>
                <p>Estás a punto de eliminar este rol. Esta acción es irreversible.</p>
            </div>

            <h5 class="mb-3">Detalles del Rol</h5>
            <hr />
            <dl class="row mb-4">
                <dt class="col-sm-4">Id:</dt>
                <dd class="col-sm-8 fw-bold">@Model.id</dd>
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8 fw-bold">@Model.nombre</dd>
                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8 fw-bold">@Model.descripcion</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="text-center">
                <input type="hidden" name="id" value="@Model.id" />
                <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
