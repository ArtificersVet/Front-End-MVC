@model List<roles>

@{
    ViewData["Title"] = "Lista de Roles";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Rol</a>
    </div>

    @if (Model.Count > 0)
    {
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rol in Model)
                {
                    <tr>
                        <th scope="row">@rol.id</th>
                        <td>@rol.nombre</td>
                        <td>@rol.descripcion</td>
                        <td class="text-center">
                            <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@rol.id">
                                <i class="fas fa-eye"></i> Ver
                            </a>
                            <a class="btn btn-warning btn-sm mx-1" asp-action="Edit" asp-route-id="@rol.id">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@rol.id">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No se encontraron roles.
        </div>
    }
</div>
