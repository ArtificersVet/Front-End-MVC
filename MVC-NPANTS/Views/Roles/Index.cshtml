@model List<roles>

@{
    ViewData["Title"] = "Lista de Roles";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rol in Model)
            {
                <tr>
                    <td>@rol.id</td>
                    <td>@rol.nombre</td>
                    <td>@rol.descripcion</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron roles.</p>
}
 

