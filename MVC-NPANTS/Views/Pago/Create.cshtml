@model MVC_NPANTS.Models.Pago

@{
    ViewData["Title"] = "Crear Pago";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" class="shadow p-4 rounded bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="FechaPago" class="form-label">Fecha de Pago</label>
                    <input asp-for="FechaPago" class="form-control" type="date" required />
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="Monto" class="form-label">Monto</label>
                    <input asp-for="Monto" class="form-control" type="number" step="0.01" required />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="MetodoPagoId" class="form-label">Método de Pago</label>
                    @Html.DropDownListFor(model => model.MetodoPagoId,
                             new SelectList(ViewBag.MetodosPago, "Id", "Nombre"),
                             "Seleccione un método de pago",
                             new { @class = "form-control" })
                    <span asp-validation-for="MetodoPagoId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="PedidoId" class="form-label">Pedido</label>
                    @Html.DropDownListFor(model => model.PedidoId,
                             new SelectList(ViewBag.Pedidos, "Id", "Saldo"),
                             "Seleccione un pedido",
                             new { @class = "form-control" })
                    <span asp-validation-for="PedidoId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
