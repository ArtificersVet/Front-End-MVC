@model MVC_NPANTS.Models.Pago

@{
    ViewData["Title"] = "Detalles de Pago";
}

<div class="main-container">
    <div class="page-header">
        <h1>Detalles de Pago</h1>
    </div>

    <div class="form-group">
        <label>ID:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Id)
        </div>
    </div>

    <div class="form-group">
        <label>Fecha de Pago:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.FechaPago) 
        </div>
    </div>

    <div class="form-group">
        <label>Monto:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Monto) 
        </div>
    </div>

    <div class="form-group">
        <label>Método de Pago:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.MetodoPago.Nombre)
        </div>
    </div>

    <div class="form-group">
        <label>Pedido:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Pedido.Total) <!-- Mostrar el total del pedido -->
        </div>
    </div>

    <div class="btn-container">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
