@model MVC_NPANTS.Models.Pago

@{
    ViewData["Title"] = "Detalles de Pago";
}

<div class="main-container">
    <div class="page-header">
        <h1 class="text-center">@ViewData["Title"]</h1>
    </div>

    <form class="shadow p-4 rounded bg-light">
        <div class="row">
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">ID:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Id)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Fecha de Pago:</label>
                <div class="form-control">@Html.DisplayFor(model => model.FechaPago)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Monto:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Monto)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Método de Pago:</label>
                <div class="form-control">@Html.DisplayFor(model => model.MetodoPago.Nombre)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Pedido:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Pedido.Total)</div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>
