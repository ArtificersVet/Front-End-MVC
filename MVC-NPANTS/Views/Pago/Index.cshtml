@model IEnumerable<MVC_NPANTS.Models.Pago>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning">
        @ViewBag.Message
    </div>
}
<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoPagoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoId)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
       @*  <tr>
            <td>
                @if(Model == null)
                {
                    <p>no hay mas registros</p>
                }
            </td>
        </tr> *@
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoPago.Nombre)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Pedido.Saldo)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info btn-sm mx-1" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-sm mx-1" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new {@class ="btn btn-danger btn-sm mx-1"})
            </td>
        </tr>
}
    </tbody>
</table>
