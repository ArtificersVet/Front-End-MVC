@model MVC_NPANTS.Models.Pago

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input type="date" asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input type="number" asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoPagoId" class="control-label"></label>
                @Html.DropDownListFor(model => model.MetodoPagoId,
                         new SelectList(ViewBag.MetodosPago, "Id", "Nombre"),
                         "Seleccione un método de pago",
                         new { @class = "form-control" })
                <span asp-validation-for="MetodoPagoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PedidoId" class="control-label"></label>
                @Html.DropDownListFor(model => model.PedidoId,
                         new SelectList(ViewBag.Pedidos, "Id", "Saldo"),
                         "Seleccione un pedido",
                         new { @class = "form-control" })
                <span asp-validation-for="PedidoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
