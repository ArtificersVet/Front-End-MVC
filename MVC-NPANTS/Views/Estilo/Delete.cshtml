@model MVC_NPANTS.Models.Estilo
@{
    ViewData["Title"] = "Detalles del Estilo";
}

<style>
    body {
        background-color: #2c3e50;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

   
    .page-header h1 {
        color: white;
        text-align: center;
        margin-bottom: 2rem;
    }

    .details-form {
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        color: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        position: relative;
        overflow: hidden;
    }

        .details-form::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            transform: rotate(45deg);
            transition: all 0.6s;
        }

    .form-label {
        color: wheat;
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-detail {
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        color: white;
        border: none;
        padding: 0.75rem 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        font-size: 1rem;
        line-height: 1.5;
    }

    .custom-table-container {
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        padding: 20px;
        overflow: hidden;
        position: relative;
    }

        .custom-table-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            transform: rotate(45deg);
            transition: all 0.6s;
        }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background-color: transparent;
    }

    .custom-header {
        background-color: rgba(255,255,255,0.1);
        color: white;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .custom-header th {
            padding: 15px;
            border-bottom: 2px solid rgba(255,255,255,0.2);
            text-align: center;
            font-size: 16px;
        }

    .custom-row {
        transition: all 0.4s ease;
    }

        .custom-row:nth-child(even) {
            background-color: rgba(255,255,255,0.05);
        }

        .custom-row:nth-child(odd) {
            background-color: rgba(255,255,255,0.02);
        }

        .custom-row:hover {
            background-color: rgba(255,255,255,0.1);
            transform: scale(1.02);
        }

        .custom-row td {
            padding: 12px;
            text-align: center;
            color: white;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            font-size: 14px;
        }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 1.5rem;
    }

    .btn-edit {
        background-color: wheat !important;
        color: #2c3e50 !important;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }

    .btn-back {
        background-color: rgba(255,255,255,0.1);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background-color: rgba(255,255,255,0.2);
            transform: scale(1.05);
        }
</style>

<div class="main-container">
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <form asp-action ="Delete" class="delete-body">
        <div class="row">
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">ID:</label>
                <div class="form-detail">@Html.DisplayFor(model => model.Id)</div>
            </div>
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Nombre:</label>
                <div class="form-detail">@Html.DisplayFor(model => model.Nombre)</div>
            </div>
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Tipo:</label>
                <div class="form-detail">@Html.DisplayFor(model => model.Tipo)</div>
            </div>
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Precio:</label>
                <div class="form-detail">@Html.DisplayFor(model => model.Precio)</div>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label">Tallas:</label>
                @if (Model.Tallas != null && Model.Tallas.Any())
                {
                    <div class="custom-table-container">
                        <table class="custom-table">
                            <thead class="custom-header">
                                <tr>
                                    <th>Talla</th>
                                    <th>Consumo de Tela</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var estiloTalla in Model.Tallas)
                                {
                                    <tr class="custom-row">
                                        <td>@estiloTalla.Talla.Nombre</td>
                                        <td>@estiloTalla.ConsumoTela</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="form-detail text-center">No hay tallas asociadas.</div>
                }
            </div>
        </div>
        <input type="hidden" asp-for="Id" />

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="fas fa-trash-alt me-2"></i>Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-times me-2"></i>Cancelar
            </a>
        </div>
    </form>
</div>