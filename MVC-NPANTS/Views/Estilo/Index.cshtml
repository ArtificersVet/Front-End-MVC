@model IEnumerable<MVC_NPANTS.Models.Estilo>

@{
    ViewData["Title"] = "Catálogo de Estilos";
}

<div class="main-container">
    <div class="page-header">
        <h1 style="color:white">@ViewData["Title"]</h1>
        <a class="btn-create" asp-action="Create">Agregar nuevo estilo</a>
    </div>

    <div class="product-grid">
        @if (Model != null && Model.Any())
        {
            @foreach (var estilo in Model)
            {
                <div class="product-card">
                    <a href="@Url.Action("GetById", new { id = estilo.Id })" class="product-name">@estilo.Nombre</a>
                    <div class="product-detail">
                        <span class="product-label">ID:</span> @estilo.Id
                    </div>
                    <div class="product-detail">
                        <span class="product-label">Tipo:</span> @estilo.Tipo
                    </div>
                    <div class="action-buttons">
                        @Html.ActionLink("Editar", "Edit", new { id = estilo.Id }, new { @class = "btn-action btn-edit" })
                        @Html.ActionLink("Detalles", "GetById", new { id = estilo.Id }, new { @class = "btn-action btn-details" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = estilo.Id }, new { @class = "btn-action btn-delete" })
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info" role="alert">
                No se encontraron estilos.
            </div>
        }
    </div>
</div>
