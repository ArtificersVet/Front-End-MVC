@model MVC_NPANTS.Models.PrendaVestir

@{
    ViewData["Title"] = "Crear Prenda de Vestir";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" class="shadow p-4 rounded bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="TelaId" class="form-label">Tela</label>
                    @Html.DropDownListFor(model => model.TelaId, (SelectList)ViewBag.Telas, "Seleccione una tela", new { @class = "form-control" })
                    <span asp-validation-for="TelaId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="EstiloId" class="form-label">Estilo</label>
                    @Html.DropDownListFor(model => model.EstiloId, (SelectList)ViewBag.Estilos, "Seleccione un estilo", new { @class = "form-control" })
                    <span asp-validation-for="EstiloId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-12">
                <div class="form-group mb-3">
                    <label asp-for="TipoprendavestirId" class="form-label">Tipo Prenda de Vestir</label>
                    @Html.DropDownListFor(model => model.TipoprendavestirId, (SelectList)ViewBag.TiposPrendaVestir, "Seleccione un tipo", new { @class = "form-control" })
                    <span asp-validation-for="TipoprendavestirId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Crear</button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
