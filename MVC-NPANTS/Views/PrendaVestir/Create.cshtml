@model MVC_NPANTS.Models.PrendaVestir

@{
    ViewData["Title"] = "Crear Prenda de Vestir";
}

<h1>Crear Prenda de Vestir</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelaId" class="control-label">Tela</label>
        <select asp-for="TelaId" class="form-control" asp-items="ViewBag.Telas"></select>
        <span asp-validation-for="TelaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EstiloId" class="control-label">Estilo</label>
        <select asp-for="EstiloId" class="form-control" asp-items="ViewBag.Estilos"></select>
        <span asp-validation-for="EstiloId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TipoprendavestirId" class="control-label">Tipo Prenda de Vestir</label>
        <select asp-for="TipoprendavestirId" class="form-control" asp-items="ViewBag.TiposPrendaVestir"></select>
        <span asp-validation-for="TipoprendavestirId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
