@model MVC_NPANTS.Models.PrendaVestir

@{
    ViewData["Title"] = "Detalles de Prenda de Vestir";
}

<div class="main-container">
    <div class="page-header">
        <h1>Detalles de Prenda de Vestir</h1>
    </div>

    <div class="form-group">
        <label>ID:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Id)
        </div>
    </div>

    <div class="form-group">
        <label>Nombre:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Nombre)
        </div>
    </div>

    <div class="form-group">
        <label>Descripción:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Descripcion)
        </div>
    </div>

    <div class="form-group">
        <label>Tela:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Tela.Nombre)
        </div>
    </div>

    <div class="form-group">
        <label>Estilo:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Estilo.Nombre)
        </div>
    </div>

    <div class="form-group">
        <label>Tipo de Prenda de Vestir:</label>
        <div class="form-control">
            @Html.DisplayFor(model => model.Tipoprendavestir.Nombre)
        </div>
    </div>

    <div class="btn-container">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-edit" })
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>

