@model MVC_NPANTS.Models.PrendaVestir

@{
    ViewData["Title"] = "Eliminar Prenda de Vestir";
}

<h1>Eliminar Prenda de Vestir</h1>

<h3>¿Estás seguro que deseas eliminar esta prenda de vestir?</h3>

<div>
    <h4>Prenda de Vestir</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
           
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            Tela
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tela.Nombre)
        </dd>
        <dt class="col-sm-2">
            Estilo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estilo.Nombre)
        </dd>
        <dt class="col-sm-2">
            Tipo Prenda de Vestir
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipoprendavestir.Nombre)
        </dd>
    </dl>
</div>

<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
