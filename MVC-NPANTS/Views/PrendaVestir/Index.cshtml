@model IEnumerable<MVC_NPANTS.Models.PrendaVestir>

@{
    ViewData["Title"] = "Listado de Prendas de Vestir";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a class="btn btn-primary" asp-action="Create">Crear Nueva Prenda de Vestir</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Tela</th>
                        <th scope="col">Estilo</th>
                        <th scope="col">Tipo de Prenda</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prenda in Model)
                    {
                        <tr>
                            <th scope="row">@prenda.Id</th>
                            <td>@prenda.Nombre</td>
                            <td>@prenda.Descripcion</td>
                            <td>@prenda.Tela.Nombre</td>
                            <td>@prenda.Estilo.Nombre</td>
                            <td>@prenda.Tipoprendavestir.Nombre</td>
                            <td class="text-center">
                                <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@prenda.Id">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a class="btn btn-warning btn-sm mx-1" asp-action="Edit" asp-route-id="@prenda.Id">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@prenda.Id">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No se encontraron prendas de vestir.
        </div>
    }
</div>
