@model IEnumerable<MVC_NPANTS.Models.PrendaVestir>

@{
    ViewData["Title"] = "Listado de Prendas de Vestir";
}

<div class="main-container">
    <div class="page-header">
        <h1>Listado de Prendas de Vestir</h1>
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tela.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estilo.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipoprendavestir.Nombre)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prenda in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => prenda.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => prenda.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => prenda.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => prenda.Tela.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => prenda.Estilo.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => prenda.Tipoprendavestir.Nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = prenda.Id }, new { @class = "btn btn-edit" })
                        @Html.ActionLink("Detalles", "Details", new { id = prenda.Id }, new { @class = "btn btn-details" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = prenda.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-create" asp-action="Create">Crear Nueva Prenda de Vestir</a>
</div>
