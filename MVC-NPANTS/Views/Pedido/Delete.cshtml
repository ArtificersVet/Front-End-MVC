@model MVC_NPANTS.Models.Pedido

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="main-container">
    <div class="page-header">
        <h1 class="text-center">¿Estás seguro de que deseas eliminar este pedido?</h1>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="shadow p-4 rounded bg-light">
      
        <hr />

        <div class="row">
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">ID:</label>
                <div class="form-control">@Model.Id</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Fecha de Pedido:</label>
                <div class="form-control">@Model.FechaPedido.ToShortDateString()</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Cliente:</label>
                <div class="form-control">@Model.Cliente?.Nombre</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Total:</label>
                <div class="form-control">@Model.Total</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Estado:</label>
                <div class="form-control">@Model.EstadoPedido?.Nombre</div>
            </div>
        </div>

        <input type="hidden" name="id" value="@Model.Id" />

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
