@model IEnumerable<MVC_NPANTS.Models.EstadoPedido>

@{
    ViewData["Title"] = "Catálogo de Estados de Pedido";
}

<div class="main-container">
    <div class="page-header">
        <h1 style="color:white">@ViewData["Title"]</h1>
        <a class="btn-create" asp-action="Create">Agregar nuevo estado de pedido</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="product-grid">
            @foreach (var estado in Model)
            {
                <div class="product-card">
                    <a href="@Url.Action("Details", new { id = estado.Id })" class="product-name">@estado.Nombre</a>
                    <div class="action-buttons">
                        @Html.ActionLink("Editar", "Edit", new { id = estado.Id }, new { @class = "btn-action btn-edit" })
                        @Html.ActionLink("Detalles", "Details", new { id = estado.Id }, new { @class = "btn-action btn-details" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = estado.Id }, new { @class = "btn-action btn-delete" })
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No se encontraron estados de pedido.
        </div>
    }
</div>
