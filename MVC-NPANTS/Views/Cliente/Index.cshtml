@model PagedClientesResponse

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="main-container">
    <div class="page-header">
        <h1 style="color:white">@ViewData["Title"]</h1>
        <a class="btn-create" asp-action="Create">Agregar nuevo cliente</a>
    </div>

    @if (Model != null && Model.Clientes != null && Model.Clientes.Any())
    {
        <div class="product-grid">
            @foreach (var cliente in Model.Clientes)
            {
                <div class="product-card">
                    <a href="@Url.Action("Details", new { id = cliente.Id })" class="product-name">@cliente.Nombre</a>

                    <div class="product-detail">
                        <span class="product-label">Dirección:</span> @cliente.Direccion
                    </div>
                    <div class="product-detail">
                        <span class="product-label">Email:</span> @cliente.Email
                    </div>
                    <div class="product-detail">
                        <span class="product-label">Teléfono:</span> @cliente.Telefono
                    </div>
                    <div class="product-detail">
                        <span class="product-label">Tipo de Cliente:</span> @cliente.Tipocliente?.Nombre ?? "No especificado"
                    </div>

                    <div class="action-buttons">
                        @Html.ActionLink("Editar", "Edit", new { id = cliente.Id }, new { @class = "btn-action btn-edit" })
                        @Html.ActionLink("Detalles", "Details", new { id = cliente.Id }, new { @class = "btn-action btn-details" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = cliente.Id }, new { @class = "btn-action btn-delete" })
                    </div>
                </div>
            }
        </div>

        <div class="pagination-container">
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="page-link">Anterior</a>
                    </li>
                }

                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="page-link">Siguiente</a>
                    </li>
                }
            </ul>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No se encontraron clientes.
        </div>
    }
</div>
