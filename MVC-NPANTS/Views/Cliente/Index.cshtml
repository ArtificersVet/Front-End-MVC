@model IEnumerable<MVC_NPANTS.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="main-container">
    <div class="page-header">
        <h1 style="color:white">@ViewData["Title"]</h1>
        <a class="btn-create" asp-action="Create">Agregar nuevo cliente</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="product-grid">
            @foreach (var cliente in Model)
            {
                <div class="product-card">
                    <a href="@Url.Action("Details", new { id = cliente.Id })" class="product-name">@cliente.Nombre</a>

                    <div class="product-detail">
                        <span class="product-label">Dirección:</span> @cliente.Direccion
                    </div>
                    <div class="product-detail">
                        <span class="product-label">Email:</span> @cliente.Email
                    </div>
                    <div class="product-detail">
                        <span class="product-label">Teléfono:</span> @cliente.Telefono
                    </div>
                    <div class="product-detail">
                        <span class="product-label">Tipo de Cliente:</span> @cliente.Tipocliente.Nombre
                    </div>

                    <div class="action-buttons">
                        @Html.ActionLink("Editar", "Edit", new { id = cliente.Id }, new { @class = "btn-action btn-edit" })
                        @Html.ActionLink("Detalles", "Details", new { id = cliente.Id }, new { @class = "btn-action btn-details" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = cliente.Id }, new { @class = "btn-action btn-delete" })
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No se encontraron clientes.
        </div>
    }
</div>
