@model IEnumerable<MVC_NPANTS.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Cliente</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Email</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Tipo de Cliente</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <th scope="row">@cliente.Id</th>
                            <td>@cliente.Nombre</td>
                            <td>@cliente.Direccion</td>
                            <td>@cliente.Email</td>
                            <td>@cliente.Telefono</td>
                            <td>@cliente.Tipocliente.Nombre</td>
                            <td class="text-center">
                                <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@cliente.Id">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a class="btn btn-warning btn-sm mx-1" asp-action="Edit" asp-route-id="@cliente.Id">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@cliente.Id">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No se encontraron clientes.
        </div>
    }
</div>
