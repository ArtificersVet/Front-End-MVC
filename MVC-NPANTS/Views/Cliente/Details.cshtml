@model MVC_NPANTS.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="main-container">
    <div class="page-header">
        <h1 class="text-center">@ViewData["Title"]</h1>
    </div>

    <form class="shadow p-4 rounded bg-light">
        <div class="row">
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">ID:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Id)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Nombre:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Nombre)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Dirección:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Direccion)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Teléfono:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Telefono)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Email:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Email)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Tipo de Cliente:</label>
                <div class="form-control">@Html.DisplayFor(model => model.Tipocliente.Nombre)</div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>
