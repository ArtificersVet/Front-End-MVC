@model MVC_NPANTS.Models.usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="main-container">
    <div class="page-header">
        <h1 class="text-center">¿Estás seguro que deseas eliminar este usuario?</h1>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="shadow p-4 rounded bg-light">
        <h4 class="text-danger">Esta acción es irreversible.</h4>
        <hr />

        <div class="row">
            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Nombre:</label>
                <div class="form-control">@Html.DisplayFor(model => model.nombre)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Email:</label>
                <div class="form-control">@Html.DisplayFor(model => model.email)</div>
            </div>

            <div class="col-md-6 col-12 mb-3">
                <label class="form-label">Roles:</label>
                <div class="form-control">
                    @if (Model.rolid != null)
                    {
                        <ul>
                            <li>@Model.rolid.Nombre</li>
                        </ul>
                    }
                    else
                    {
                        <span>No tiene roles asignados</span>
                    }
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="id" />

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
