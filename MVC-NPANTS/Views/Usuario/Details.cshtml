@model usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white text-center">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Detalles del Usuario</h4>
            <hr />
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">Id:</dt>
                <dd class="col-sm-9">@Model.id</dd>
                <dt class="col-sm-3 fw-bold">Nombre:</dt>
                <dd class="col-sm-9">@Model.nombre</dd>
                <dt class="col-sm-3 fw-bold">Email:</dt>
                <dd class="col-sm-9">@Model.email</dd>
                <dt class="col-sm-3 fw-bold">Roles:</dt>
                <dd class="col-sm-9">
                    @if (Model.rolid?.Count > 0)
                    {
                        <ul>
                            @foreach (var rol in Model.rolid)
                            {
                                <li>@rol.nombre</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No tiene roles asignados</span>
                    }
                </dd>
            </dl>
            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
