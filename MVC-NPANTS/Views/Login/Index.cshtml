@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow" style="width: 400px; border-radius: 15px;">
        <div class="card-header text-center" style="background-color: #007bff; border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <h2 class="text-white">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su correo" required />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
            </form>
            <div class="text-center mt-3">
                <p>¿No tienes una cuenta? <a class="btn btn-link" asp-controller="Usuario" asp-action="Create" style="color: #007bff;">Crear Usuario</a></p>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @Html.ValidationSummary()
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f2f5; /* Color de fondo suave */
        font-family: 'Arial', sans-serif; /* Fuente moderna */
    }

    .card {
        transition: transform 0.2s; /* Efecto de hover */
    }

        .card:hover {
            transform: scale(1.02); /* Aumentar tamaño al pasar el mouse */
        }

    .btn-link {
        color: #007bff; /* Color del enlace */
        text-decoration: none; /* Sin subrayado */
    }

        .btn-link:hover {
            text-decoration: underline; /* Subrayado al pasar el ratón */
        }
</style>
