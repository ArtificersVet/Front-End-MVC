@model IEnumerable<MVC_NPANTS.Models.Talla>
@{
    ViewData["Title"] = "Talla";
}

<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
    }

    .talla-container {
        max-width: 800px;
        margin: 20px auto;
        background-color: white;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .talla-header {
        margin-bottom: 20px;
    }

        .talla-header h1 {
            margin: 0;
            font-size: 24px;
        }

    .talla-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .talla-table th, .talla-table td {
            border: 1px solid #927c77;
            padding: 8px;
            text-align: left;
        }

        .talla-table th {
            background-color: #a0a0a0;
            color: white;
        }

    .btn {
        padding: 5px 15px;
        border: none;
        cursor: pointer;
        border-radius: 15px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
    }

    .btn-modify {
        background-color: #00c3a5;
        color: white;
    }

    .btn-details {
        background-color: #c9a063;
        color: white;
    }

    .btn-delete {
        background-color: #c75d5d;
        color: white;
    }

    .btn-create {
        background-color: #a0a0a0;
        color: white;
        display: block;
        margin-left: auto;
        padding: 10px 20px;
    }
</style>

<div class="talla-container">
    <div class="talla-header">
        <h1>Talla</h1>
    </div>

    <table class="talla-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>
                        @Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "btn btn-modify" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-details" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-delete" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-create" asp-action="Create">Crear</a>
</div>