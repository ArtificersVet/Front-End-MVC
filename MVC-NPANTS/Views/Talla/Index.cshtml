@model IEnumerable<MVC_NPANTS.Models.Talla>

@{
    ViewData["Title"] = "Lista de Tallas";
}

<div class="main-container">
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="btn-container mb-3">
        <a class="btn btn-create" asp-action="Create">Crear Nueva Talla</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="data-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Nombre)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "btn btn-edit" }) | 
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-details" }) | 
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No se encontraron tallas.
        </div>
    }
</div>
